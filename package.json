{
  "name": "graphql-scalars",
  "private": true,
  "license": "OWFa-1.0",
  "homepage": "https://spec.graphql.org/",
  "repository": {
    "type": "git",
    "url": "http://github.com/graphql/graphql-spec.git"
  },
  "scripts": {
    "test": "npm run test:build && npm run test:spellcheck",
    "test:build": "spec-md scalars/guide.md > /dev/null",
    "test:spellcheck": "cspell \"scalars/**/*.md\" README.md",
    "format": "prettier --write \"**/*.{md,yml,yaml,json}\"",
    "format:check": "prettier --check \"**/*.{md,yml,yaml,json}\"",
    "build": "./build.sh",
    "watch": "nodemon -e json,md --exec \"npm run build\""
  },
  "devDependencies": {
    "cspell": "5.9.1",
    "nodemon": "2.0.12",
    "prettier": "^2.3.0",
    "spec-md": "3.0.2"
  },
  "prettier": {
    "proseWrap": "always",
    "trailingComma": "none"
  }
}
